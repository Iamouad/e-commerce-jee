	<persistence-unit name="ejbecommerce">
		<jta-data-source>java:/MySqlDS</jta-data-source>
		<class>entities.Categorie</class>
		<class>entities.Client</class>
		<class>entities.Produit</class>
		<class>entities.ProduitCommande</class>
		<class>entities.Client</class>
		<class>entities.CommandeClient</class>
		<properties>
				<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL55Dialect" />
 				<property name="hibernate.hbm2ddl.auto" value="update" />
